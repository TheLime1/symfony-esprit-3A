<html>
<head>
    <title>Author List</title>
</head>

{% block body %}
    <h1>Author List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">No authors found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
</html>